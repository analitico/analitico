    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "OFFprogram": "examples/api-dataset.py",
            "program": "${file}",
            "cwd": "${workspaceFolder}/source",
            "envPath": "${workspaceFolder}/dev.env",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/source"
            }
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/source",
            "program": "${workspaceFolder}/source/manage.py",
            "console": "integratedTerminal",
            "debugOptions": [ "Django"],
            "envPath": "${workspaceFolder}/dev.env",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true,
            "debugStdLib": true,
            "logToFile": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/source"
            }
        },
        {
            "name": "Python: Django test",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/source",
            "program": "${workspaceFolder}/source/manage.py",
            "console": "integratedTerminal",
            "args": [
                "test",
                "-v",
                "2"
            ],
            "django": true,
            "debugStdLib": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/source"
            }
        },
        {
            "name": "Python: Django specific test",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/source/manage.py",
            "console": "integratedTerminal",
            "args": [
                "test",
                "api.test.RecipeTests.test_recipe_train_predict_the_whole_enchilada",
                "-v",
                "2"
            ],
            "django": true,
            "debugStdLib": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/source"
            }
        },
        {
            "name": "Python: Trainer",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "trainer",
                "trn_c8C9o5BSKrps"
            ],
            "django": true
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        }
    ]
}