    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run file (python)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}/source",
            "envPath": "${workspaceFolder}/dev.env",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/source"
            }
        },
        {
            "name": "Run server (django)",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/source",
            "program": "${workspaceFolder}/source/manage.py",
            "console": "integratedTerminal",
            "debugOptions": [ "Django"],
            "envPath": "${workspaceFolder}/dev.env",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true,
            "debugStdLib": true,
            "logToFile": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/source"
            }
        },
        {
            "name": "Test all (Django)",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/source",
            "program": "${workspaceFolder}/source/manage.py",
            "console": "integratedTerminal",
            "args": [
                "test",
                "-v",
                "2"
            ],
            "django": true,
            "debugStdLib": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/source"
            }
        },
        {
            "name": "Test one (django)",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/source/manage.py",
            "console": "integratedTerminal",
            "args": [
                "test",
                "api.test.DatasetTests.test_dataset_upload_process_data",
                "-v",
                "2"
            ],
            "django": true,
            "debugStdLib": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/source"
            }
        },
        {
            "name": "Worker (django)",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/source",
            "program": "${workspaceFolder}/source/manage.py",
            "console": "integratedTerminal",
            "args": [
                "worker",
                "jb_ds_s24_outofstock"
            ],
            "django": true
        }
    ]
}