{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost"
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "enter-your-module-name-here",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/source",
            "program": "${workspaceFolder}/source/manage.py",
            "console": "integratedTerminal",
            "debugOptions": [ "Django"],
            "envPath": "${workspaceFolder}/source/dev.env",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "django": true
        },
        {
            "name": "Python: Django test",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/source",
            "program": "${workspaceFolder}/source/manage.py",
            "console": "integratedTerminal",
            "args": [
                "test",
                "-v",
                "2"
            ],
            "django": true,
            "debugStdLib": true
        },
        {
            "name": "Python: Trainer",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/source/manage.py",
            "console": "integratedTerminal",
            "args": [
                "trainer",
                "trn_c8C9o5BSKrps"
            ],
            "django": true
        },
        {
            "name": "Python: Django migrate",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/source/manage.py",
            "console": "integratedTerminal",
            "args": [
                "migrate"
            ],
            "django": true
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        }
    ]
}